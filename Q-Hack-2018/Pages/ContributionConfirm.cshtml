@page
@model ContributionConfirmModel
@{
    ViewData["Title"] = "Contribution Confirm";
}
<div class="container__white">
    <a class="estimates__href" href="/index"><img class="close-icon" src="../images/close-icon.png" alt="Close module" /></a>
        <div class="pot__container">
            <h2 class="pot__text pot__text--total inverted">Pot total</h2>
            <h2 class="pot__text pot__text__numbers inverted"><span class="pot__text__numbers--poundsign">£</span>@Html.DisplayFor(model => model.PotTotal, "Currency")</h2>
            <img class="pot__logo" src="../images/fuelgood-logo.png" alt="Alternate Text" />
        </div>
        <br />

        <p class="category-text"><span class="block">You're currently rounding up from the</span>@Html.DisplayFor(model => model.CategoriesChosen)</p>
        <p class="given-text">So far you've given<span class="given-text--number">@Html.DisplayFor(model => model.GivenDays)</span> days of heating</p>
        <p class="forecast-text"><span class="block"><a href="/Forecast">We predict</a> you will give 10 days of heating</span> between September 1st - 30th with your current categories</p>
</div>